{% extends 'base.html.twig' %}
{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}"><i class="btn btn-primary fa fa-eye"></i></a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="btn btn-warning fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun r√©sultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-dark" href="{{ path('user_new') }}">Nouvel utilisateur</a>
{% endblock %}
