{% extends 'base.html.twig' %}

{% block title %}Afficher{% endblock %}

{% block body %}
<div id="content" class="p-4 p-md-5 pt-5">
    <h1>Afficher utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('user_index') }}">Retour</a>


    {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
