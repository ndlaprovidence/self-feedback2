{% extends 'base.html.twig' %}

{% block title %}Panel Administrateur
{% endblock %}

{% block body %}


<style>
	.example-wrapper {
		margin: 1em auto;
		max-width: 800px;
		width: 95%;
		font: 18px / 1.5 sans-serif;
	}
	.example-wrapper code {
		background: #F5F5F5;
		padding: 2px 6px;
	}
</style>

<div id="content" class="p-4 p-md-5 pt-5">
	<h2 class="mb-4">Modifier le code pin</h2>
	<div class="card text-center">
		<div class="card-body">
			<h5 class="card-title">Modifier son code</h5>
             {{ form_start(form) }}
				<div class="form-group">
                 {{form_widget(form.pin)}}
				</div>
			<br> {{form_widget(form.submit)}}
		</div> {{form_end(form)}}
	</div>
</div>
{% endblock %}
