<!Doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="description" content="">
		<meta name="author" content="">


		<title>
			{% block title %}Code Pin
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link href="{{asset('css/style-client.css') }}" rel="stylesheet"/>
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"/>
		{% endblock %}

		{% block javascripts %}{% endblock %}
	</head>

	<body>
		{% block body %}

			<div class="position-absolute top-0 start-50 translate-middle-x mb-5"><img src="images/ndlp.jpg" alt=""></div>

			<div class="container position-absolute top-50 start-50 translate-middle">
				<div class="card">
					<div class="card-header">
						CODE PIN
					</div> {{form_start(form)}}

					<div class="card-body">
						<h5 class="card-title">Ins√©rer le code pin</h5>
						<div class="input-group mb-3 w-25 "> {{form_widget(form.pin)}}
						</div> {{form_widget(form.submit)}}
					</div> {{form_end(form)}}
				</div>
			</div>
			{% for message in app.flashes('danger') %}
				<div class="alert alert-danger"> {{ message }}
				</div>
			{% endfor %}
		{% endblock %}
	</body>
</html>
